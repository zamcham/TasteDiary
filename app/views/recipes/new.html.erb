<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create a new recipe</h1>
            <%= form_with model: @recipe, class: "form-horizontal" do |f| %>
                <div class="form-group">
                    <%= f.label :name, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                    <%= f.text_field :name, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :description, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                    <%= f.text_area :description, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :preparation_time, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                    <%= f.number_field :preparation_time, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :cooking_time, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                    <%= f.number_field :cooking_time, class: "form-control" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :public, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                        <%= f.check_box :public, class: "form-check-input" %>
                    </div>
                </div>

                <%= f.submit "Create Recipe", class: "btn btn-primary mt-3" %>

            <% end %>
        </div>
    </div>
</div>
