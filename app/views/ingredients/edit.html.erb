<!-- app/views/ingredients/edit.html.erb -->

<h1>Edit Ingredient</h1>

<%= form_with(model: @ingredient, url: ingredient_path(@ingredient), method: :patch) do |form| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being updated:</h2>
      <ul>
        <% @ingredient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Ingredient', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', ingredients_path, class: 'btn btn-secondary' %>
