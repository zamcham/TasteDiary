<!-- app/views/public_recipes/index.html.erb -->

<div class="container">
  <h1 class="text-center">Public Recipes</h1>

  <% if @public_recipes.any? %>
    <div class="row justify-content-center">
      <% @public_recipes.each do |recipe| %>
        <div class="col-md-7 mb-4">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-5">
                  <h5 class="card-title mb-0"><%= recipe.name %></h5>
                  <p class="card-text">By: <strong class="m-0"><%= recipe.user.name %></strong></p>
                </div>
                <div class="col-md-7">
                  <ul>
                    <% total_price = recipe.ingredients.sum(:price) %>
                    <% ingredient_count = recipe.ingredients.count %>
                  </ul>
                  <p class="card-text"><strong>Total Price:</strong> $<%= total_price %></p>
                  <p class="card-text"><strong>Total Ingredients:</strong> <%= ingredient_count %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">No public recipes available.</p>
  <% end %>
</div>
